<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/sh_rounded_rectangle_wht01_16dp"
    android:elevation="4dp">

    <View
        android:id="@+id/accentPOV"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@drawable/sh_half_left_rounded_rectangle_16dp"
        android:backgroundTint="@color/pnk01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/picIMG"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accentPOV"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_profile_pic_placeholder_100dp_100dp" />

    <TextView
        android:id="@+id/nameLBL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/pnk01"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/picIMG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/picIMG"
        app:layout_constraintTop_toTopOf="@+id/picIMG"
        tools:text="Nishant\nMahajan" />

    <TextView
        android:id="@+id/postLBL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="@color/wht01"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/accentPOV"
        app:layout_constraintEnd_toEndOf="@+id/accentPOV"
        android:textStyle=""
        app:layout_constraintStart_toStartOf="@+id/accentPOV"
        tools:text="App Developer" />

    <ImageView
        android:id="@+id/iconIMG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitEnd"
        android:tint="@color/wht01"
        app:layout_constraintBottom_toTopOf="@+id/postLBL"
        app:layout_constraintEnd_toEndOf="@+id/accentPOV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/accentPOV"
        app:layout_constraintTop_toTopOf="@+id/accentPOV"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@drawable/ic_designer_120dp_120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>