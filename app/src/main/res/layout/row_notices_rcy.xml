<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPOV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/sh_rounded_rectangle_wht01_16dp"
    android:stateListAnimator="@animator/an_move_down_06dp_00dp_on_press">

    <View
        android:id="@+id/priorityIndicatorPOV"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="@drawable/sh_half_rounded_rectangle_16dp"
        android:backgroundTint="@color/pnk01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headingLBL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/cabin"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priorityIndicatorPOV"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Change in dinner timings" />

    <TextView
        android:id="@+id/dateLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/cabin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/headingLBL"
        app:layout_constraintTop_toBottomOf="@+id/headingLBL"
        tools:text="Nov 12" />

    <TextView
        android:id="@+id/timeLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/cabin"
        app:layout_constraintBottom_toBottomOf="@+id/dateLBL"
        app:layout_constraintStart_toEndOf="@+id/dateLBL"
        app:layout_constraintTop_toTopOf="@+id/dateLBL"
        tools:text="12:28 AM" />
</androidx.constraintlayout.widget.ConstraintLayout>